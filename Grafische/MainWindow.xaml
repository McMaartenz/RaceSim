<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Grafische"
        xmlns:Controller="clr-namespace:Controller;assembly=Controller" x:Class="Grafische.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Background="#FFC1C1C1">
    <Window.DataContext>
        <Controller:DataContext/>
    </Window.DataContext>
    <Grid>
        <Label x:Name="TrackName" Content="{Binding TrackName}" Margin="0,20,0,0"/>
        <Image x:Name="trackImage" Margin="0,40,0,0" Source="pack://application:,,,/img/broken.png"/>
        <DockPanel LastChildFill="False" Margin="0,0,0,0">
            <Menu Height="20" VerticalAlignment="Top" DockPanel.Dock="Top">
                <MenuItem Header="Menu">
                    <MenuItem Header="Close Application" Click="MenuItem_Exit_Click"/>
                    <MenuItem Header="Show/Hide Console" Click="Toggle_Console_View"/>
                    <MenuItem Header="Show/Hide Display Current Race Info" Click="Toggle_CurrentRaceInfo_Click"/>
                    <MenuItem Header="Show/Hide Display Competition Info" Click="Toggle_CompetitionInfo_Click"/>
                </MenuItem>
            </Menu>
        </DockPanel>
    </Grid>
</Window>
